{
  "buildCommand": "npm run build-vercel",
  "outputDirectory": "backend/dist",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/dist/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/index.js"
    },
    {
      "source": "/:path*",
      "destination": "/index.js"
    }
  ]
}
